	body
		- var grid_rows = 5;
		- var grid_columns = 6;

		div.header
			div.level
				h2 Level: 1
			div.game-mode
				h1 Multiples of 2
		div.game-container
			div.grid(data-rows=grid_rows data-columns=grid_columns)
				- for(var i = 0; i < grid_rows; i++) {
					div.row
						- for(var j = 0; j < grid_columns; j++) {
							div.tile
								div.tile-inner
									span 3 + 2
						- }
				- }

			div.player-grid
				div#player
		
