		title Number Munchers
		
		link(rel='stylesheet', href='/css/main.css')
		block styles

		script(src='/js/jquery-2.0.3.min.js')

	body
		- var grid_rows = 7;
		- var grid_columns = 8;

		div.main-screen
			h1 Select Game Mode:
			ul
				li.selected Multiples
				li Factors
				li Primes
				li Random Game Mode

		div.loading-screen
			- for(var i = 0; i < ((grid_rows * 2) - 1); i++) {
				div
			- }

		div.header
			div.level
				span Level : 
				span#level 1

			div.game-mode
				h1#mode Multiples of 2
		div.game-container
			div.muncher-died
				span
			div#grid(data-rows=grid_rows data-columns=grid_columns)
				- for(var i = 0; i < grid_rows; i++) {
					div.row
						- for(var j = 0; j < grid_columns; j++) {
							- if((i == 0 && j == 0) || (i == 0 && j == grid_columns - 1) || (i == grid_rows - 1 && j == 0) || (i == grid_rows - 1 && j == grid_columns - 1)) {
								div.tile.emptyCorner
									div.tile-inner
										span
							- } else if(i == 0 || i == grid_rows - 1) {
								div.tile.emptyRow
									div.tile-inner
											span
							- } else if((i != 0 && j == 0) || (i != grid_rows - 1 && j == grid_columns - 1))  {
								div.tile.emptyCol
									div.tile-inner
										span
							- } else {
								div.tile
									div.tile-inner
										span 
							- }
						- }
				- }

			div#player-grid
				div#muncher.muncher
			div.enemy-grid
				div#enemy1.troggle
				//-div#enemy2.troggle
				//-div#enemy3.troggle
			

		div#extra-info
			div
				span Score:
			div.score-container
				span#score 0
			div.lives
				div.life.muncher
				div.life.muncher
				div.life.muncher
		
