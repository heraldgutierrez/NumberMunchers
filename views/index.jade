html
	head
		meta(name='author' content='Herald Gutierrez')
		meta(name='description' content='My personal website. Provides my portfolio and my resume')
		meta(name='keywords' content='HTML, CSS, JavaScript, jQuery, NodeJS, Jade, ExpressJS')
		meta(http-equiv='content-type' content='text/html; charset=utf-8')
		meta(name='description' content='Herald Gutierrez is a developer in Winnipeg, Manitoba')
		meta(name="viewport" content="width=device-width, initial-scale=0.8")

		title Herald Gutierrez
		
		link(rel='stylesheet', href='/css/main.css')
		block styles

		script(src='/js/jquery-2.0.3.min.js')

	body
		- var grid_rows = 7;
		- var grid_columns = 8;

		div.main-menu
			- for(var i = 0; i < ((grid_rows * 2) - 1); i++) {
				- if(i % 2 == 0) {
					div.even
				- } else {
					div.odd
				- }
			- }

		div.header
			div.level
				span Level : 
				span#level 1

			div.game-mode
				h1#mode Multiples of 2
		div.game-container
			div#grid(data-rows=grid_rows data-columns=grid_columns)
				- for(var i = 0; i < grid_rows; i++) {
					div.row
						- for(var j = 0; j < grid_columns; j++) {
							- if((i == 0 && j == 0) || (i == 0 && j == grid_columns - 1) || (i == grid_rows - 1 && j == 0) || (i == grid_rows - 1 && j == grid_columns - 1)) {
								div.tile.emptyCorner
									div.tile-inner
										span
							- } else if(i == 0 || i == grid_rows - 1) {
								div.tile.emptyRow
									div.tile-inner
											span
							- } else if((i != 0 && j == 0) || (i != grid_rows - 1 && j == grid_columns - 1))  {
								div.tile.emptyCol
									div.tile-inner
										span
							- } else {
								div.tile
									div.tile-inner
										span 
							- }
						- }
				- }

			div#player-grid
				div#muncher
				div#enemy1
				div#enemy2
				div#enemy3
		div#extra-info
			div
				span Score:
			div.score-container
				span#score 0
		
